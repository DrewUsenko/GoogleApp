    <class>slGal.LiveEdu.ORM.StuffInf</class>
    <class>slGal.LiveEdu.ORM.FacultyInf</class>
    <class>slGal.LiveEdu.ORM.PersoneServicesConsultation</class>
    <class>slGal.LiveEdu.ORM.PersonInf</class>
    <class>slGal.LiveEdu.ORM.SpecInf</class>
    <class>slGal.LiveEdu.ORM.Services</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/googleschema?autoReconnect=true&amp;characterEncoding=UTF-8&amp;useUnicode=true"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
